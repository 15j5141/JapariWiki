{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "plugin:compat/recommended",
        "google",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "compat/compat": "error"
    },
    "plugins": [
        "compat",
        "jquery"
    ],
    "settings": {
        "polyfills":[
            "Promise"
        ]
    }
}